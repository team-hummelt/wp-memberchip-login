<div class="wp-membership-login">
    <div class="{% if container is defined %}{{ container }}{% else %}container-fluid{% endif %}">
        <div class="card card-license shadow-sm">
            <h4 class="card-header d-flex align-items-center text-light bg-orange py-4">
                <i class="bi bi-incognito me-1"></i>
                {% if headertxt is defined %}{{ headertxt }}{% else %} {{ 'Members'|__ }}{% endif %} </h4>
            <div class="card-body pb-4" style="min-height: 72vh">
                <div class="d-flex align-items-center mb-2">
                    <div class="fs-5">
                        <i class="bi bi-arrow-right-circle text-orange p-0 m-0"></i>
                        <span id="currentSideTitle">{% if subtext is defined %}{{ subtext }}{% else %} {{ 'settings'|__ }}{% endif %}</span>
                    </div>
                </div>
                <div class="col-12 mx-auto">
                    <div class="card shadow-sm">
                        {% block content %}{% endblock %}
                    </div>
                </div>
                <div class="bottom-0 end-0 position-absolute my-1 me-3 text-end">
                    <small class="small-xl">
                        <i class="bi bi-database"></i> <span class="text-danger">{{ 'dbVersion'|dbVersion }}</span> | <i class="bi bi-incognito text-muted"></i> <span class="text-danger">v{{ 'version'|version }}</span>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="snackbar-success"></div>
<div id="snackbar-warning"></div>